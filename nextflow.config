profiles {
	    standard {
        	process.executor = 'local'
        	process.maxForks = 3
        	singularity.enabled = false
        	docker.enabled = true
        }
        
        sge {
			process.executor = 'sge'
			process.penv = 'smp'
			process.queue = 'public.q'
			process.cpus = '5'
    		process.memory = '10.GB'
    	}


 		slurm {
    		process.executor = 'slurm'
    		process.clusterOptions = '--qos=medium'
    		process.cpus = '5'
    		process.memory = '10.GB'
  		}

}

process {

	publishDir = [path: './results', mode: 'copy', overwrite: 'true']

	errorStrategy = 'retry'
	maxRetries = 3
	maxForks = 20

	cpus = 1
	time = { 1.h * task.attempt }
	memory = { 1.GB * task.attempt }

    withName:gatk {
        container = 'docker://broadinstitute/gatk:4.0.4.0'
    }
    
    withName:manta {
        container = 'docker://obenauflab/strelka:latest'
    }
    
    withName:strelka {
        container = 'docker://obenauflab/strelka:latest'
    }
}

timeline {
	enabled = true
}

singularity {
	enabled = true
}
